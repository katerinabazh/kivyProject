<MyGridLayout>

    name_list_input:name_list_input

    GridLayout:
        cols:1
        rows:3
        size: root.width, root.height
        size_hint:(0.5, 0.5)

        padding: 50
        #spacing: 1
        GridLayout:
            cols:2
            size_hint:(1, 1)

            GridLayout:
                cols:2

                Label:
                    text: "Нужнен multiplication"

                CheckBox: 
                    id: multiplication
                
                Label:
                    text: "GELE"
                
                CheckBox: 
                    id: GELEcheck

            GridLayout:
                cols:2

                Label:
                    text: "Входной список имен"

                TextInput:
                    id: name_list_input
                    multiline: False

                Label:
                    text: "Номер prec\n (если не нужен \n- не вводить)"

                TextInput:
                    id: prec_num 
                    multiline: False
                    text: "0"

                Label:
                    text: "Номер \n сценария"

                TextInput:
                    id: code_of_scenario 
                    multiline: False
                    text: "1"
                
                Label:
                    text: "Число значений \n внутри листа"

                TextInput:
                    id: count_of_numbers 
                    multiline: False
                    text: "2"
            
                

            
        
        Button:
            text: "Генерировать"
            font_size: 32
            on_press: root.press()
            #pos_hint:{"x":1 , "bottom":0}
            size_hint:(0.3, 0.3)

        Label:
            id: finished_text
            halign: 'center'
            valign:'middle'
            size_hint:(0.2, 0.2)
            text: ""

       
